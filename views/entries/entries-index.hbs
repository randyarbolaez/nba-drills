<div class="gutter">
  <div class=" flex-container entry-container ">
    {{#each Entries}}
    <div class="entry-card ">
      <a class="entry-links" data-toggle="modal" data-target="#{{this._id}}">
        <img class="entry-img " src="https://www.psdcovers.com/wp-content/uploads/2012/07/NBA-vector-logos.jpg">
        <h3 class="drill-text ">{{this.date}}</h3>
      </a>
      <form action="/entries/delete/{{this._id}}" method="post">
        <button class="flag"> Delete </button>
      </form>
    </div>
    <div class="container-modal modal fade myModal" id="{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
      aria-hidden="true">
      <div class="container">
        <div class="row">
          <div class="col-sm-6 col-sm-offset-3 text-center">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">Ã—</button>
            <br>
            <br>
            <h1>{{this.date}}</h1>
            <hr>
            <h2>{{this.drill}}</h2>
            <hr>
            <h1>{{this.entry}}</h1>
            <hr>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
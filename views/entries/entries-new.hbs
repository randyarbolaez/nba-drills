<form action="/entries/create" method="POST">
  <div class="login-wrap">
    <div class="login-html">
      <input id="tab-1" type="radio" name="tab" class="sign-in" checked>
      <label for="tab-1" class="tab">Date/Entry</label>
      <input id="tab-2" type="radio" name="tab" class="for-pwd">
      <label for="tab-2" class="tab">Indicate a Drill</label>
      <div class="login-form">
        <div class="sign-in-htm">
          <div class="group">
            <label for="user" class="label">Date</label>
            <input id="user" type="date" pattern="dd-mm-yyyy" name="date" class="input">
          </div>
          <div class="group">
            <label class="label" for="">ENTRY</label>
            <textarea class="input" name="entry" maxlength="250"></textarea>
          </div>
          <div class="hr"></div>
        </div>
        <div class="for-pwd-htm">
          <div class="group">
            <label class="label" for="">CHOOSE A DRILL </label>
            <select class="input" name="drill">
              <option value="ricohet">Ricohet</option>
              <option value="dribbling-figure-8">Dribbling Figure 8</option>
              <option value="sprint-free-throws">Sprint/Free Throws</option>
              <option value="defensive-figure-8">Defensive Figure 8</option>
              <option value="two-ball-dribble">Two Ball Dribble</option>
              <option value="self-shooting">Self Shooting</option>
              <option value="taps-drill">Taps Drill</option>
              <option value="defense-reaction">Defense Reaction</option>
              <option value="pivot-shooting">Pivot Shooting</option>
              <option value="tennisball-handle">Tennisball Handle</option>
              <option value="kills">Kills</option>
              <option value="dribbling-double-suicide-conditioning-drill">Dribbling Double Suicide Conditioning</option>
              <option value="shooting-routine">Shooting Routine</option>
              <option value="5-minute-dribbling-routine">5 Minute Dribbling Routine</option>
            </select>
          </div>
          <div class="group">
          </div>
          <div class="hr"></div>
          <div class="group">
            <input type="submit" class="button" value="Create Entry">
          </div>
        </div>
      </div>
    </div>
  </div>
</form>
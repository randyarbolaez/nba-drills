<div class="auth-container">
  <form class="auth-form" action="/signup" method="post">
    <div class="auth-username-password-div">
      <label class="auth-label-username-password" for="username">Username</label>
      <input class="auth-username-password" type="text" name="username" placeholder="Username">
      <label class="auth-label-username-password" for="password">Password</label>
      <input class="auth-username-password" type="password" name="password" placeholder="Password">
    </div>

    <div class="auth-message">
      {{#if message}} {{ message }} {{/if}}
    </div>

    <div class="auth-btn">
      <button class="auth-btn-signup-login">SIGNUP</button>
    </div>

    <div class="auth-already-have-acc">
      <a href="/login">
        ALREADY HAVE AN ACCOUNT?
        <button class="auth-already-have-acc-btn"> LOG IN</a>
      </button>
    </div>
  </form>
  <a href="http://nba.com">
    <img class="auth-img" src="https://seeklogo.com/images/N/nba-logo-41668C66DB-seeklogo.com.png" alt="">
  </a>
</div>